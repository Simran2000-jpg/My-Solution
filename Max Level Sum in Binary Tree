class Solution{
  public:
     void post(unordered_map<int,int>&mp,Node* root,int level){
        if(root==NULL)return;
        mp[level]+=root->data;
             post(mp,root->left,level+1);
                  post(mp,root->right,level+1);
                  return;
    }
    int maxLevelSum(Node* root) {
        unordered_map<int,int>mp;//{level,total level sum}
        int level=0;
        post(mp,root,level);
        int ans=INT_MIN;
        for(auto it:mp){
            int temp=it.second;
            ans=max(temp,ans);
        }
        return ans;
    }
};

