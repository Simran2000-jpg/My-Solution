#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--)
    {
        int n, e=0, o=0;
        cin>>n;
        vector<int>a(n);
        for(int i = 0;i < n;i++)
        {
            cin>>a[i];
            if(i%2 == 0)
            {
                if(a[i]%2 != 0)
                {
                    e++;
                }
            }
            else{
                if(a[i] % 2 !=1)
                {
                    o++;
                }
            }
        }
        if(o == e)cout<< o <<endl;
        else cout<< -1 <<endl;


    }
    
    
    return 0;
}
