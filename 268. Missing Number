using sorting:
class Solution {
public:
    int missingNumber(vector<int>& nums) {
          //  if(nums.size()<2)return 0;
        int maxi=INT_MIN;
            int mini=0;
            for(auto it:nums){
                    if(it>maxi)maxi=it;
                    if(it<mini)mini=it;
            }
            sort(nums.begin(),nums.end());
            int ind=0;
            for(int i=mini;i<=maxi;i++){
                    if(nums[ind]!=i)return i;
                    ind++;
            }
            return maxi+1;
    }
};
using map:
class Solution {
public:
    int missingNumber(vector<int>& nums) {
        int maxi=0;
            unordered_map<int,int>mp;//number,present or not
            for(auto it:nums){
                    if(it>maxi)maxi=it;
                    mp[it]=1;

            }
            int n=nums.size();
            for(int i=0;i<=n;i++){
                    if(mp[i]!=1)return i;

            }
            return 0;
    }
};
