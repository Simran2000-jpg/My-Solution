class Solution {
public:
    int missingNumber(vector<int>& nums) {
          //  if(nums.size()<2)return 0;
        int maxi=INT_MIN;
            int mini=0;
            for(auto it:nums){
                    if(it>maxi)maxi=it;
                    if(it<mini)mini=it;
            }
            sort(nums.begin(),nums.end());
            int ind=0;
            for(int i=mini;i<=maxi;i++){
                    if(nums[ind]!=i)return i;
                    ind++;
            }
            return maxi+1;
    }
};
