#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while (t--)
    {
        int n,x,floor=1,range=2;
        cin>>n>>x;
        while(n>range)
        {
            range+=x;
            floor++;
        }
        cout<<floor<<endl;

    }
    
    
    return 0;
}
